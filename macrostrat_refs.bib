@article{Rowley2017EarthConstant,
  title = {Earth's {{Constant Mean Elevation}}: {{Implication}} for {{Long-Term Sea Level Controlled}} by {{Oceanic Lithosphere Dynamics}} in a {{Pitman World}}},
