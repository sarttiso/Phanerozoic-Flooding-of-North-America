}

@article{Marcilly.etal2022GlobalPhanerozoic,
  title = {Global {{Phanerozoic}} Sea Levels from Paleogeographic Flooding Maps},
  author = {Marcilly, Chlo{\'e} M. and Torsvik, Trond H. and Conrad, Clinton P.},
