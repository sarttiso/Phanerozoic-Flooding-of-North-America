@article{Macdonald.etal2014NewlyIdentified,
  title = {A Newly Identified {{Gondwanan}} Terrane in the Northern {{Appalachian Mountains}}: {{Implications}} for the {{Taconic}} Orogeny and Closure of the {{Iapetus Ocean}}},
