@article{Barbeau2003FlexuralModel,
  title = {A Flexural Model for the {{Paradox Basin}}: Implications for the Tectonics of the {{Ancestral Rocky Mountains}}: {{A}} Flexural Model for the {{Paradox Basin}}},
